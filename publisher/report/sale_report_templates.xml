<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_saleorder_publisher_document">

        <t t-set="doc" t-value="doc.with_context({'lang':doc.partner_id.lang})" />

        <t t-set="header_title1" t-value="header_title1_1+' # '+doc.name" t-if="doc.state not in ['draft','sent','option','sale']" />
        <t t-set="header_title1" t-value="header_title1_2+' # '+doc.name" t-if="doc.state in ['draft','sent']" />
        <t t-set="header_title1" t-value="header_title1_3+' # '+doc.name" t-if="doc.state in ['option']" />
        <t t-set="header_title1" t-value="header_title1_4+' # '+doc.name" t-if="doc.state in ['sale']" />

        <t t-call="publisher.publisher_layout">
            <div class="page">
                <div class="oe_structure"/>

                <div class="row">
                    <div class="col-xs-5">
                        <address style="margin-bottom:1em;" t-field="doc.company_id.partner_id"
                            t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax", "email", "website"], "no_marker": True, "phone_icons": True}' />
                    </div>

                    <div class="col-xs-5 col-xs-offset-2">
                        <div><strong><span t-field="doc.partner_invoice_id.name" /></strong></div>
                        <t t-if="doc.partner_invoice_id.parent_id">
                            <div><span t-field="doc.partner_invoice_id.parent_id.name" /></div>
                        </t>
                        <address style="margin-bottom:1em;" t-field="doc.partner_invoice_id"
                            t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}' />
                        <span t-if="doc.partner_invoice_id.vat">VAT: <span t-field="doc.partner_invoice_id.vat"/></span>
                    </div>
                </div>

                <div class="row mt32 mb32" id="informations">
                    <div t-if="doc.client_order_ref" class="col-xs-3">
                        <strong>Your Reference:</strong>
                        <p t-field="doc.client_order_ref"/>
                    </div>
                    <div t-if="doc.date_order" class="col-xs-3">
                        <strong t-if="doc.state not in ['draft','sent']">Date Ordered:</strong>
                        <strong t-if="doc.state in ['draft','sent']">Quotation Date:</strong>
                        <p t-field="doc.date_order"/>
                    </div>
                    <div t-if="doc.user_id.name" class="col-xs-3">
                        <strong>Salesperson:</strong>
                        <p t-field="doc.user_id"/>
                    </div>
                    <div class="col-xs-3" t-if="doc.partner_invoice_id != doc.partner_id">
                        <strong>Final customer :</strong>
                        <p t-field="doc.partner_id"/>
                    </div>
                    <div name="payment_term" t-if="doc.payment_term_id" class="col-xs-3">
                        <strong>Payment Terms:</strong>
                        <p t-field="doc.payment_term_id"/>
                    </div>
                </div>

                <!-- Is there a discount on at least one line? -->
                <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>

                <t t-foreach="doc.order_lines_layouted()" t-as="page">
                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right" t-if="not no_price and not final">Unit Price</th>
                                <th t-if="display_discount and not no_price and not final" class="text-right" groups="sale.group_discount_per_so_line">Disc.(%)</th>
                                <th class="text-right" t-if="not no_price">Taxes</th>
                                <th class="text-right" groups="sale.group_show_price_subtotal" t-if="not no_price">Price</th>
                                <th class="text-right price_tax_included" groups="sale.group_show_price_total" t-if="not no_price">Total Price</th>
                            </tr>
                       </thead>
                       <tbody class="sale_tbody">
                            <t t-foreach="page" t-as="layout_category">

                                <t t-if="layout_category_size > 1 or page_size > 1" groups="sale.group_sale_layout">
                                    <tr class="active">
                                        <td colspan="7" style="font-weight: bold; border-bottom: 1px solid black;">&amp;bull;
                                            <t t-esc="layout_category['name']"/>
                                        </td>
                                    </tr>
                                </t>

                                <!-- Lines associated -->
                                <t t-foreach="layout_category['lines']" t-as="l">
                                    <tr>
                                        <td>
                                            <span t-field="l.name"/> <!-- The name will be a structured string containing all info about the specific line in the production -->
                                        </td>
                                        <td class="text-right">
                                            <span t-field="l.product_uom_qty"/>
                                            <span t-field="l.product_uom" groups="product.group_uom"/>
                                        </td>
                                        <td class="text-right" t-if="not no_price and not final">
                                            <span t-field="l.price_unit"/>
                                        </td>
                                        <td t-if="display_discount and not no_price and not final" class="text-right" groups="sale.group_discount_per_so_line">
                                            <span t-field="l.discount"/>
                                        </td>
                                        <td class="text-right" t-if="not no_price">
                                            <span t-esc="', '.join(map(lambda x: (x.description or x.name), l.tax_id))"/>
                                        </td>
                                        <td class="text-right" groups="sale.group_show_price_subtotal" t-if="not no_price">
                                            <span t-field="l.price_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                        <td class="text-right" groups="sale.group_show_price_total" t-if="not no_price">
                                            <span t-field="l.price_total"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                        </td>
                                    </tr>
                                </t>

                                <t t-if="(layout_category_size > 1 or page_size > 1) and layout_category['subtotal']" groups="sale.group_sale_layout">
                                    <tr class="text-right">
                                        <td colspan="6">
                                            <strong>Subtotal: </strong>
                                            <t t-set="subtotal" t-value="sum(line.price_subtotal for line in layout_category['lines'])"/>
                                            <span t-esc="subtotal" t-options="{'widget': 'monetary', 'display_currency': doc.pricelist_id.currency_id}"/>
                                        </td>
                                    </tr>
                                </t>

                            </t>
                        </tbody>
                    </table>

                    <t t-if="page_index &lt; page_size - 1" groups="sale.group_sale_layout">
                        <p style="page-break-before:always;"> </p>
                    </t>
                </t>

                <div class="row" name="total" t-if="not no_price">
                    <div class="col-xs-4 pull-right">
                        <table class="table table-condensed">
                            <tr class="border-black">
                                <td><strong>Total Without Taxes</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_untaxed"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                            <t t-foreach="doc._get_tax_amount_by_group()" t-as="amount_by_group">
                                <tr>
                                    <td><span t-esc="amount_by_group[0] or 'Taxes'"/></td>
                                    <td class="text-right">
                                        <span t-esc="amount_by_group[1]"
                                            t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                    </td>
                                </tr>
                            </t>
                            <tr class="border-black">
                                <td><strong>Total</strong></td>
                                <td class="text-right">
                                    <span t-field="doc.amount_total"
                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>

                <p t-field="doc.note" />
                <p t-if="doc.payment_term_id.note">
                    <span t-field="doc.payment_term_id.note"/>
                </p>
                <p id="fiscal_position_remark" t-if="doc.fiscal_position_id and doc.fiscal_position_id.note">
                    <strong>Fiscal Position Remark:</strong>
                    <span t-field="doc.fiscal_position_id.note"/>
                </p>

                <div class="oe_structure"/>
            </div>
        </t>

        <t t-call="publisher.publisher_layout_sfc" />
    </template>

    <template id="report_saleorder_publisher">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="publisher.report_saleorder_publisher_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>
</odoo>
