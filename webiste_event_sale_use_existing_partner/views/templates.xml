<odoo>
    <data>
        <template id="address_existing_partner" inherit_id="website_sale.address" name="Address Management Existing Partner">
            <xpath expr="//input[@name='name']" position="replace">
                <input class="form-control" name="name" t-att-value="address_partner.name" type="text"/>
            </xpath>
            <xpath expr="//input[@name='email']" position="replace">
                <input class="form-control" name="email" t-att-value="address_partner.email" type="text"/>
            </xpath>
            <xpath expr="//input[@name='company_name']" position="replace">
                <t t-if="address_partner.company_name">
                    <input class="form-control" name="company_name" t-att-value="address_partner.company_name" type="text"/>
                </t>
                <t t-elif="address_partner.parent_id">
                    <input class="form-control" name="company_name" t-att-value="address_partner.parent_id.name" type="text"/>
                </t>
            </xpath>
            <xpath expr="//input[@name='phone']" position="replace">
                <input class="form-control" name="phone" t-att-value="address_partner.phone" type="text"/>
            </xpath>
            <xpath expr="//input[@name='vat']" position="replace">
                <input class="form-control" name="vat" t-att-value="address_partner.vat" type="text"/>
            </xpath>
            <xpath expr="//input[@name='street']" position="replace">
                <input class="form-control" name="street" t-att-value="address_partner.street" type="text"/>
                <input hidden="1" id="zip_code" name="zip_code" t-att-value="address_partner.zip"/>
                <script type="text/javascript">
                    setTimeout(function() {
                        let zip_code = document.getElementById("zip_code").value;
                        document.getElementsByName("zip")[0].value = zip_code;
                    }, 100);
                </script>
            </xpath>
            <xpath expr="//input[@name='city']" position="replace">
                <input class="form-control" name="city" t-att-value="address_partner.city" type="text"/>
            </xpath>
        </template>

        <template id="checkout_partner_parent" inherit_id="website_sale.checkout">
            <xpath expr="//t[@t-set='contact']" position="replace">
                <t t-if="order.partner_id.parent_id" t-set='contact' t-value="order.partner_id.parent_id"/>
                <t t-else="" t-set='contact' t-value="order.partner_id"/>
            </xpath>
        </template>
    </data>
</odoo>